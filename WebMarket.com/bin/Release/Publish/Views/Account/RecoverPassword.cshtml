@model DataLayer.RecoverPasswordViewModel
<!--  = Register =  -->
<div id="recoverPasswordModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="registerModalLabel"><span class="light">ثبت نام</span> در وبمارکت</h3>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("RecoverPassword", "Account"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-error" })

            @*@Html.TextBoxFor(m => Model.ID, "", new { @display="hidden"})*@
            <input type="text" name="ID" value="@Model.ID" style="display:none" />

            <div class="control-group">
                @Html.LabelFor(m => Model.Password_Recover)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.Password_Recover)
                    @Html.ValidationMessageFor(m => Model.Password_Recover, "", new { @class = "text-error" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => Model.ConfirmPassword_Recover)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.ConfirmPassword_Recover)
                    @Html.ValidationMessageFor(m => Model.ConfirmPassword_Recover, "", new { @class = "text-error" })
                </div>
            </div>
            <button type="submit" class="btn btn-danger input-block-level bold higher">
                ثبت نام
            </button>
        }
        <p class="center-align push-down-0">
            <a data-toggle="modal" role="button" href="#loginModal" data-dismiss="modal">قبلا ثبت نام کرده اید؟</a>
        </p>

    </div>
</div>
<script>
    $(document).ready(function () {
        $('#recoverPasswordModal').modal('show')
    })
</script>
@if (ViewBag.ModalCode == 0)
{
    <script>
        $(document).ready(function () {
            $('#recoverPasswordModal').modal('hide')
        })
    </script>
}