@model DataLayer.Product

<div class="span5">
    <div class="product-preview">
        <div class="picture">
            <img src="@Wrench.FoundSRC(Model)" alt="" width="940" height="940" id="mainPreviewImg">
        </div>
        <div class="thumbs clearfix">
            @for (int i = 0; i < Model.ProductGallery.Count; i++)
            {
                <div class="thumb active">
                    <a href="#mainPreviewImg"><img src="@Wrench.FoundSRC(Model,i)" alt="" width="940" height="940" style="max-height:98px"></a>
                </div>
            }
        </div>
    </div>
</div>

