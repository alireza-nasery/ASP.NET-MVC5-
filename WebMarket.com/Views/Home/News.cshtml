@using DataLayer;
@model IEnumerable<DataLayer.NewsViewModel>


<div class="darker-stripe blocks-spacer more-space latest-news with-shadows">
    <div class="container">

        <!--  ==========  -->
        <!--  = Title =  -->
        <!--  ==========  -->
        <div class="row">
            <div class="span12">
                <div class="main-titles center-align">
                    <h2 class="title">
                        <span class="clickable icon-chevron-right" id="tweetsRight"></span> &nbsp;&nbsp;&nbsp;
                        <span class="light">آخرین</span> خبر ها &nbsp;&nbsp;&nbsp;
                        <span class="clickable icon-chevron-left" id="tweetsLeft"></span>
                    </h2>
                </div>
            </div>
        </div> <!-- /title -->
        <!--  ==========  -->
        <!--  = News content =  -->
        <!--  ==========  -->
        <div class="row">
            <div class="span12">
                <div class="carouFredSel" data-nav="tweets" data-autoplay="false">

                    <!-- /slide -->
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <!--  ==========  -->
                        <!--  = Slide =  -->
                        <!--  ==========  -->
                        <div class="slide">
                            <div class="row">
                                <div class="span6">
                                    <div class="news-item">
                                        <div class="published">@Model.ElementAt(i).PublishDate</div>
                                        <h6><a href="#">@Model.ElementAt(i).Title</a></h6>
                                        <p>@Model.ElementAt(i).Description</p>
                                    </div>
                                </div>
                                <div class="span6">
                                    <div class="news-item">
                                        @{ 
                                            i++;
                                        }
                                        <div class="published">@Model.ElementAt(i).PublishDate</div>
                                        <h6><a href="#">@Model.ElementAt(i).Title</a></h6>
                                        <p>@Model.ElementAt(i).Description</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div> <!-- /news content -->
    </div>
</div> <!-- /latest news -->