@model DataLayer.RegisterViewModel
<!--  = Register =  -->
<div id="registerModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="registerModalLabel"><span class="light">ثبت نام</span> در وبمارکت</h3>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("Register","Account"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-error" })

            <div class="control-group">
                @Html.LabelFor(m => Model.Username)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.Username)
                    @Html.ValidationMessageFor(m => Model.Username, "", new { @class = "text-error" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => Model.Email)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.Email)
                    @Html.ValidationMessageFor(m => Model.Email, "", new { @class = "text-error" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => Model.Password)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.Password)
                    @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-error" })
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(m => Model.ConfirmPassword)
                <div class="controls">
                    @Html.TextBoxFor(m => Model.ConfirmPassword)
                    @Html.ValidationMessageFor(m => Model.ConfirmPassword, "", new { @class = "text-error" })
                </div>
            </div>
            <button type="submit" class="btn btn-danger input-block-level bold higher">
                ثبت نام
            </button>
        }
        <p class="center-align push-down-0">
            <a data-toggle="modal" role="button" href="#loginModal" data-dismiss="modal">قبلا ثبت نام کرده اید؟</a>
        </p>

    </div>
</div>
@if (ViewBag.ModalCode == 101)
{
    <script>
        $(document).ready(function () {
            $('#registerModal').modal('show')
        })
    </script>
}
