@model DataLayer.AddUserViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h4 class="card-title">کاربر</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Add", "AddUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-3 col-sm-2 imgUp">
                            <div class="imagePreview"></div>
                            <label class="btn btn-primary" style="width:100%">بارگزاری<input type="file" name="Image" id="upload-user-image" class="uploadFile img" style="width:0px;height:0px;overflow:hidden;"></label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            @*<select class="custom-select custom-select">
                                    <option value="" disabled="" selected="">نقش کاربر را مشخص کنید</option>
                                </select>*@
                            @Html.LabelFor(m => Model.RoleID, new { @class = "bmd-label-floating" })
                            @Html.DropDownListFor(u => u.RoleID, Model.Roles.Select(x => new SelectListItem { Text = x.RoleName, Value = x.ID.ToString() }), new { @class = "custom-select custom-select" })
                        </div>
                    </div>
                    <div class="row  mt-3">
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.Username, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.Username, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.Username, "", new { @class = "text-danger" })
                                @*<label class="bmd-label-floating">نام کاربری</label>*@
                                @*<input type="text" class="form-control">*@
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.Email, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.Email, "", new { @class = "text-danger" })
                                @*    <label type="text" class="bmd-label-floating">ایمیل</label>*@
                                @*  <input type="text" class="form-control">*@
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.Password, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.Password, "", new { @class = "text-danger" })
                                @*<label class="bmd-label-floating">کلمه عبور</label>*@
                                @*<input type="text" class="form-control">*@
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.ConfirmPassword, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => Model.ConfirmPassword, "", new { @class = "text-danger" })
                                @*<label class="bmd-label-floating">تکرار کلمه عبور</label>*@
                                @*<input type="text" class="form-control">*@
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.FirstName, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.FirstName, new { @class = "form-control" })
                                @*<label class="bmd-label-floating">نام</label>*@
                                @*<input type="text" class="form-control" />*@
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.LastName, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.LastName, new { @class = "form-control" })
                                @*<label class="bmd-label-floating">نام خانوادگی</label>*@
                                @*<input type="text" class="form-control">*@
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group bmd-form-group">
                                @Html.LabelFor(m => Model.PhonNumber, new { @class = "bmd-label-floating" })
                                @Html.TextBoxFor(m => Model.PhonNumber, new { @class = "form-control" })
                                @*<label class="bmd-label-floating">شماره تماس</label>*@
                                @*<input type="text" class="form-control">*@
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary pull-right">افزودن</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Result == 100 || ViewBag.Result==101)
{
    <script>
        showNotification('top', 'center', '@ViewBag.Icon','@ViewBag.Message', '@ViewBag.Type')
    </script>
}

